<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFETextToSpeechSample.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Text-to-Speech Sample" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Picker x:Name="Languages" />
        <Entry x:Name="TextToSpeak" />
        <Button Text="Speak Please" Clicked="Button_Clicked" />
    </StackLayout>

</ContentPage>
